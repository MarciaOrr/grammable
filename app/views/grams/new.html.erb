<div class="col-12 col-sm-8 offset-sm-2 col-md-6 offset-md-3 card form">
  <h1>New Gram</h1>

  <%= simple_form_for @gram do |f| %>
    <div class='form-inputs'>
      <%= f.input :message %>
      <%= f.input :picture %>
    </div>
    <div class='form-actions'>
      <%= f.submit 'Post!', class: 'my-btn' %>
    </div>
  <% end %>
</div>